<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainScreenButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_medium_500</item>>
        <item name="android:textSize">22sp</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">12dp</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_item</item>
        <item name="android:fontFamily">@font/ys_regular</item>>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:layout_marginStart">@dimen/margin_item</item>
        <item name="drawableTint">?attr/colorSecondary</item>
    </style>

    <style name="RoundedCorner8">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="InfoRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">@dimen/info_row_padding_horizontal</item>
        <item name="android:paddingVertical">@dimen/info_row_padding_vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="InfoLabelText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_regular</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/info_text_size</item>
    </style>

    <style name="InfoValueText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_regular</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/info_text_size</item>
    </style>

</resources>